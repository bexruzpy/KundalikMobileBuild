<LoginScreen>:
    canvas.before:
        Color:
            rgba: 0.85, 0.85, 0.85, 1  # Background color
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        orientation: 'vertical'
        size_hint: None, None
        width: min(500, self.parent.width-50)
        padding: 50
        height: 750


        Label:
            text: "KundalikCOM\nauto login"
            multiline: True
            font_size: '30sp'
            size_hint_y: None
            size_hint_x: 1
            height: self.texture_size[1] + dp(20)
            padding: [20, 0]
            color: 0.502, 0.275, 1
            font_name: "fonts/OpenSans-Bold"
            halign: "center"

        Label:
            text: "powered py Projects Platform"
            font_size: '15sp'
            size_hint_y: None
            height: self.texture_size[1] + dp(10)
            color: 0.106, 0, 0.573, 1
            font_name: "fonts/OpenSans-Light"
            halign: "center"

        Widget:
            size_hint_y: None
            height: dp(40)

        BoxLayout:
            orientation: 'vertical'
            padding: [0, 0]
            spacing: 10
            margin: [0,0,100,0]

            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.17  # Background color
                RoundedRectangle:
                    pos: (self.pos[0] - 25, self.pos[1] - 25)
                    size: (self.size[0] + 50, self.size[1] + 50)
                    radius: [20]  # Chegara radiusi
                Color:
                    rgba: 0, 0.051, 0.373, 0.53
                Line:
                    rounded_rectangle: (self.pos[0]-25, self.pos[1]-25, self.width+50, self.height+50, 20)
                    width: 1
            Label:
                text: "L O G I N"
                font_size: '20sp'
                size_hint_y: None
                height: self.texture_size[1]
                pos_hint: {'right': 1, 'top': -1}
                halign: "left"  # Chapga joylashtirish
                text_size: self.size[0], 30
                halign: "right"
                font_name: "fonts/OpenSans-Bold"
                padding: [0,0]

                canvas.before:
                    Color:
                        rgba: 0.149, 0, 1, 0.42  # Background color
                    RoundedRectangle:
                        pos: (self.pos[0] - 160 + self.size[0], self.pos[1] - 10)
                        size: (210, self.size[1] + 20)
                        radius: [0, 20, 0, 30]  # Chegara radiusi

            Label:
                height: 10
                size_hint_y: None

            TextInput:
                id: username
                hint_text: "Username"
                font_size: 18
                font_name: "fonts/OpenSans-Regular"
                size_hint_y: None
                height: 50
                multiline: False
                background_normal: ''
                background_color: 0, 0, 0, 0  # Bu erda fon shaffofligi yo'q
                padding: [10, 5]
                height: 50
                foreground_color: 0, 0, 0, 0.9
                color: 1, 1, 1, 1
                padding: [15, 10, 15, 10]
                canvas.after:
                    Color:
                        rgba: 0.149, 0, 1, 0.3
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]  # Chegara radiusi
            BoxLayout:
                size_hint_y: None
                height: 50
                TextInput:
                    id: password
                    hint_text: "Password"
                    font_size: 18
                    font_name: "fonts/OpenSans-Regular"
                    multiline: False
                    background_normal: ''
                    background_color: 0, 0, 0, 0  # Bu erda fon shaffofligi yo'q
                    padding: [10, 5]
                    foreground_color: 0, 0, 0, 0.9
                    color: 1, 1, 1, 1
                    padding: [15, 10, 25, 10]
                    canvas.after:
                        Color:
                            rgba: 0.149, 0, 1, 0.3
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size[0]-10, self.size[1]
                            radius: [10]  # Chegara radiusi
                Button:
                    text: "OK"
                    font_size: '20sp'
                    size_hint_x: None
                    width: dp(80)
                    background_normal: ''
                    background_color: 0, 0, 0, 0
                    color: 1, 1, 1, 1
                    on_release: root.manager.LoginPage.get_login_code(username.text, password.text)
                    canvas.before:
                        Color:
                            rgba: 0.129, 0.114, 0.216, 1  # Background color
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [10]  # Chegara radiusi


            TextInput:
                id: sms_code
                hint_text: "SMS kod"
                font_size: 18
                size_hint_y: None
                height: 50
                font_name: "fonts/OpenSans-Regular"
                multiline: False
                background_normal: ''
                background_color: 0, 0, 0, 0  # Bu erda fon shaffofligi yo'q
                padding: [10, 5]
                foreground_color: 0, 0, 0, 0.9
                color: 1, 1, 1, 1
                padding: [15, 10, 15, 10]
                canvas.after:
                    Color:
                        rgba: 0.149, 0, 1, 0.3
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]  # Chegara radiusi



            Button:
                text: "L O G I N"
                font_size: '20sp'
                background_normal: ''
                size_hint_y: None
                height: 60
                background_color: 0, 0, 0, 0
                color: 1, 1, 1, 1
                on_release: root.manager.LoginPage.login_func(username.text, password.text, sms_code.text)
                canvas.before:
                    Color:
                        rgba: 0.129, 0.114, 0.216, 1  # Background color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]  # Chegara radiusi


            Label:
                text: "Projects Platform"
                font_size: '14sp'
                size_hint_y: None
                height: self.texture_size[1]
                pos_hint: {'right': 1, 'top': -1}
                halign: "left"  # Chapga joylashtirish
                text_size: self.size[0], 30
                halign: "left"
                font_name: "fonts/OpenSans-Bold"
                padding: [0,0]

                canvas.before:
                    Color:
                        rgba: 0.149, 0, 1, 0.42  # Background color
                    RoundedRectangle:
                        pos: (self.pos[0]-40, self.pos[1] - 5)
                        size: (240, 30)
                        radius: [0, 10, 0, 15]  # Chegara radiusi


        Label:
            text: "KundalikCOM\nauto login"
            multiline: True
            font_size: '30sp'
            size_hint_y: None
            size_hint_x: 1
            height: self.texture_size[1] + dp(20)
            padding: [20, 0]
            color: 0, 0, 0, 0
            font_name: "fonts/OpenSans-Bold"
            halign: "center"

        Label:
            text: "powered py Projects Platform"
            font_size: '15sp'
            size_hint_y: None
            height: self.texture_size[1] + dp(10)
            color: 0, 0, 0, 0
            font_name: "fonts/OpenSans-Light"
            halign: "center"
