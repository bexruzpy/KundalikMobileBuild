<DatasScreen>
    BoxLayout:
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        orientation: 'vertical'
        size_hint: 1, 1

        canvas.before:
            Color:
                rgba: 0.851, 0.851, 0.851, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: 100
            padding: [20,10,20,5]

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, 1
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 0.45
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                    Color:
                        rgba: 0, 0.051, 0.373, 0.53
                    Line:
                        rounded_rectangle: (*self.pos, self.width, self.height, 20)
                        width: 1
                Image:
                    pos_hint: {'center_y': 0.5}
                    source: 'assets/icons/profile.png'
                    size_hint: None, 1
                    size: 80, 80
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, 1
                    space: 0
                    Label:
                        id: fullname
                        text: "Ism familiya"
                        font_size: '20sp'
                        size_hint_y: 5
                        height: self.texture_size[1]
                        halign: "left"
                        text_size: self.size
                        font_name: "assets/fonts/OpenSans-Bold"
                        padding: [20, 5, 5, 5]

                        canvas.before:
                            Color:
                                rgba: 0.149, 0, 1, 0.42  # Background color
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [0, 20, 0, 20]
                    Label:
                        text: "Letsenziya tugash vaqti:"
                        font_size: '12sp'
                        size_hint_y: 2
                        height: self.texture_size[1]
                        halign: "left"
                        text_size: self.size[0], 30
                        font_name: "assets/fonts/OpenSans-Bold"
                        color: 0, 0.231, 0.435, 1
                    Label:
                        id: letsenziya_label
                        text: "01.01.2025y"
                        font_size: '12sp'
                        size_hint_y: 2
                        height: self.texture_size[1]
                        halign: "left"
                        text_size: self.size[0], 30
                        font_name: "assets/fonts/OpenSans-Bold"
                        color: 0, 0.231, 0.435,1
                    Label:
                        text: ""
                        font_size: '12sp'
                        size_hint_y: 1

        BoxLayout:
            size_hint: 1, None
            height: 50
            orientation: "horizontal"
            padding: [10, 0, 10, 0]
            Button:
                id: datas_all_button
                text: "Hammasi"
                size_hint: 1, 1
                background_color: 0,0,0,0
                font_name: "assets/fonts/OpenSans-Bold"
                font_size: 20
                color: 1, 1, 1, 1.0
                on_release:
                    datas_content.current = "all"
                    datas_content.transition.direction = "right"
                    datas_all_button.color = 1, 1, 1, 1
                    datas_err_button.color = 0.4667, 0.2392, 0.7922, 1.0
                    root.manager.DatasPage.set_container("all")
                canvas.before:
                    Color:
                        rgba: 0.1490, 0.0000, 1.0000, 0.42
                    RoundedRectangle:
                        pos: self.pos[0]+5, self.pos[1]+5
                        size: self.size[0]-10, self.size[1]-10
                        radius: [18]

            Button:
                id: datas_err_button
                text: "Paroli xatolar"
                size_hint: 1, 1
                background_color: 0,0,0,0
                color: 0.4667, 0.2392, 0.7922, 1.0
                font_name: "assets/fonts/OpenSans-Bold"
                font_size: 20
                on_release:
                    datas_content.current = "err"
                    datas_content.transition.direction = "left"
                    datas_err_button.color = 1, 1, 1, 1
                    datas_all_button.color = 0.4667, 0.2392, 0.7922, 1.0
                    root.manager.DatasPage.set_container("err")
                canvas.before:
                    Color:
                        rgba: 0.1490, 0.0000, 1.0000, 0.21
                    RoundedRectangle:
                        pos: self.pos[0]+5, self.pos[1]+5
                        size: self.size[0]-10, self.size[1]-10
                        radius: [18]
        # O'rtadagi qism
        FloatLayout:
            orientation: 'vertical'
            size_hint: 1, 1
            
            # Kunlik hisobotlar
            ScreenManager:
                size_hint: 1,1
                pos_hint: {"center_x": 0.5, "center_y":0.5}
                id: datas_content
                Screen:
                    name: "all"
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_x: 1
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        ScrollView:
                            do_scroll_x: False
                            do_scroll_y: True
                            BoxLayout:
                                id: all_page
                                orientation: 'vertical'
                                size_hint_y: None
                                height: 200
                                padding: [15,0,30,0]
                                BoxLayout:
                                    orientation: 'horizontal'
                                    size_hint: 1, None
                                    height: 100
                                    space: 10
                                    canvas.before:
                                        Color:
                                            rgba: 0.7588, 0.7137, 0.9961, 1.0
                                        Rectangle:
                                            pos: self.pos
                                            size: self.size[0]+15, self.size[1]
                                    BoxLayout:
                                        orientation: "vertical"
                                        size_hint: 1, 1
                                        padding: [10, 10, 0, 5]
                                        Label:
                                            text: "O'quvchi 1"
                                            color: 0.0000, 0.0510, 0.3725, 0.6
                                            font_size: 28
                                            size_hint: 1, 2
                                            font_name: "assets/fonts/OpenSans-Bold"
                                            text_size: self.size
                                            valign: "bottom"
                                        Label:
                                            text: "login: user_1\nparol: parol_1"
                                            color: 0.2863, 0.2706, 0.2706, 1
                                            size_hint: 1, 3
                                            font_size: 16
                                            font_name: "assets/fonts/OpenSans-Light"
                                            text_size: self.size
                                            valign: "center"
                                    Button:
                                        size_hint: None, 1
                                        width: 50
                                        height: 50
                                        color: 0, 1, 0, 1.0
                                        background_color: 0,0,0,0
                                        font_size: 24
                                        Image:
                                            source: "assets/icons/edit.png"
                                            size_hint: None, 1
                                            size: 40, 40
                                            center_x: self.parent.center_x
                                            center_y: self.parent.center_y+3

                                BoxLayout:
                                    orientation: 'horizontal'
                                    size_hint: 1, None
                                    height: 100
                                    space: 10
                                    canvas.before:
                                        Color:
                                            rgba: 0.9647, 0.9608, 1.0000, 1.0
                                        Rectangle:
                                            pos: self.pos
                                            size: self.size[0]+15, self.size[1]
                                    BoxLayout:
                                        orientation: "vertical"
                                        size_hint: 1, 1
                                        padding: [10, 10, 0, 5]
                                        Label:
                                            text: "O'quvchi 1"
                                            color: 0.0000, 0.0510, 0.3725, 0.6
                                            font_size: 28
                                            size_hint: 1, 2
                                            font_name: "assets/fonts/OpenSans-Bold"
                                            text_size: self.size
                                            valign: "bottom"
                                        Label:
                                            text: "login: user_1\nparol: parol_1"
                                            color: 0.2863, 0.2706, 0.2706, 1
                                            size_hint: 1, 3
                                            font_size: 16
                                            font_name: "assets/fonts/OpenSans-Light"
                                            text_size: self.size
                                            valign: "center"
                                    Button:
                                        size_hint: None, 1
                                        width: 50
                                        height: 50
                                        color: 0, 1, 0, 1.0
                                        background_color: 0,0,0,0
                                        font_size: 24
                                        Image:
                                            source: "assets/icons/edit.png"
                                            size_hint: None, 1
                                            size: 40, 40
                                            center_x: self.parent.center_x
                                            center_y: self.parent.center_y+3

            
                Screen:
                    name: "err"
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_x: 1
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        ScrollView:
                            do_scroll_x: False
                            do_scroll_y: True
                            BoxLayout:
                                id: err_page
                                orientation: 'vertical'
                                size_hint_y: None
                                height: 200
                                padding: [15,0,30,0]
                                BoxLayout:
                                    orientation: 'horizontal'
                                    size_hint: 1, None
                                    height: 100
                                    space: 10
                                    canvas.before:
                                        Color:
                                            rgba: 0.7588, 0.7137, 0.9961, 1.0
                                        Rectangle:
                                            pos: self.pos
                                            size: self.size[0]+15, self.size[1]
                                    BoxLayout:
                                        orientation: "vertical"
                                        size_hint: 1, 1
                                        padding: [10, 10, 0, 5]
                                        Label:
                                            text: "O'quvchi 1"
                                            color: 0.0000, 0.0510, 0.3725, 0.6
                                            font_size: 28
                                            size_hint: 1, 2
                                            font_name: "assets/fonts/OpenSans-Bold"
                                            text_size: self.size
                                            valign: "bottom"
                                        Label:
                                            text: "login: user_1\nparol: parol_1"
                                            color: 0.2863, 0.2706, 0.2706, 1
                                            size_hint: 1, 3
                                            font_size: 16
                                            font_name: "assets/fonts/OpenSans-Light"
                                            text_size: self.size
                                            valign: "center"
                                    Button:
                                        size_hint: None, 1
                                        width: 50
                                        height: 50
                                        color: 0, 1, 0, 1.0
                                        background_color: 0,0,0,0
                                        font_size: 24
                                        Image:
                                            source: "assets/icons/edit.png"
                                            size_hint: None, 1
                                            size: 40, 40
                                            center_x: self.parent.center_x
                                            center_y: self.parent.center_y+3

                                BoxLayout:
                                    orientation: 'horizontal'
                                    size_hint: 1, None
                                    height: 100
                                    space: 10
                                    canvas.before:
                                        Color:
                                            rgba: 0.9647, 0.9608, 1.0000, 1.0
                                        Rectangle:
                                            pos: self.pos
                                            size: self.size[0]+15, self.size[1]
                                    BoxLayout:
                                        orientation: "vertical"
                                        size_hint: 1, 1
                                        padding: [10, 10, 0, 5]
                                        Label:
                                            text: "O'quvchi 1"
                                            color: 0.0000, 0.0510, 0.3725, 0.6
                                            font_size: 28
                                            size_hint: 1, 2
                                            font_name: "assets/fonts/OpenSans-Bold"
                                            text_size: self.size
                                            valign: "bottom"
                                        Label:
                                            text: "login: user_1\nparol: parol_1"
                                            color: 0.2863, 0.2706, 0.2706, 1
                                            size_hint: 1, 3
                                            font_size: 16
                                            font_name: "assets/fonts/OpenSans-Light"
                                            text_size: self.size
                                            valign: "center"
                                    Button:
                                        size_hint: None, 1
                                        width: 50
                                        height: 50
                                        color: 0, 1, 0, 1.0
                                        background_color: 0,0,0,0
                                        font_size: 24
                                        Image:
                                            source: "assets/icons/edit.png"
                                            size_hint: None, 1
                                            size: 40, 40
                                            center_x: self.parent.center_x
                                            center_y: self.parent.center_y+3

            # Run tugmasi
            BoxLayout:
                orientation: "horizontal"
                size_hint: None, None
                pos_hint: {"center_x": 1-70/self.parent.width, "center_y": 70/max(self.parent.height, 1)}
                width: 60
                height: 60
                padding: [5,0,0,5]
                Button:
                    size_hint: 1, 1
                    text: "+"
                    font_name: "assets/fonts/OpenSans-Light"
                    background_color: 0,0,0,0
                    font_size: 40
                    on_release: root.show_add_page()
                    canvas.before:
                        Color:
                            rgba: 0.1059, 0.1294, 0.2431, 1.0
                        RoundedRectangle:
                            size: self.size[0]+20, self.size[1]+20
                            pos: self.pos[0]-10, self.pos[1]-10
                            radius: [35]

        BoxLayout:
            size_hint: 1, None
            height: 50
            orientation: "horizontal"
            canvas.before:
                Color:
                    rgba: 0.7412, 0.7412, 0.7412, 1.0
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                id: all_number
                text: "Jami: 100 ta"
                size_hint: 1, 1
                text_size: self.size
                valign: "center"
                halign: "center"
                color: 0.0000, 0.0510, 0.3725, 1.0
            Label:
                id: err_number
                text: "Paroli xatolar: 100 ta"
                size_hint: 1, 1
                text_size: self.size
                valign: "center"
                halign: "center"
                color: 0.0000, 0.0510, 0.3725, 1.0
        # Pastki navbar
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: 100
            padding: [5, 5, 5, 10]
            canvas.before:
                Color:
                    rgba: 0.424, 0.518, 0.898, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            # Home button
            BoxLayout:
                orientation: 'vertical'
                size_hint: 1, 1
                canvas.before:
                    Color:
                        rgba: 0, 1, 1, 0
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                Button:
                    size_hint: 1, 1
                    background_color: 0,0,0,0
                    on_press:
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'home'
                    Image:
                        source: 'assets/icons/home.png'
                        size_hint: None, 1
                        size: 50, 50
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y+10
                    Label:
                        text: "Bosh sahifa"
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y-30
                        color: 0,0,0,1

            # Datas button
            BoxLayout:
                orientation: 'vertical'
                size_hint: 1, 1
                canvas.before:
                    Color:
                        rgba: 0, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                Button:
                    size_hint: 1, 1
                    background_color: 0,0,0,0
                    Image:
                        source: 'assets/icons/mall.png'
                        size_hint: None, 1
                        size: 50, 50
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y+10
                    Label:
                        text: "Ma'lumotlar"
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y-30
                        color: 0,0,0,1
            
            # Letsenziya button
            BoxLayout:
                orientation: 'vertical'
                size_hint: 1, 1
                canvas.before:
                    Color:
                        rgba: 0, 1, 1, 0
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                Button:
                    size_hint: 1, 1
                    background_color: 0,0,0,0
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'letsenziya'
                        app.data_population()
                    Image:
                        source: 'assets/icons/let.png'
                        size_hint: None, 1
                        size: 50, 50
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y+10
                    Label:
                        text: "Letsenziya"
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y-30
                        color: 0,0,0,1